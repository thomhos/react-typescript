{
  "compilerOptions": {
    "outDir": "../../../build",
    "target":"es6",
    "moduleResolution": "node",
    "jsx": "react",
    "module": "commonjs",
    "preserveConstEnums": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "../../src/types/*"
      ]
    }
  },
  "include": [
    "../../src/client/**/*.ts",
    "../../src/client/**/*.tsx",
    "../../src/types/**/*.d.ts",
    "../../node_modules/@types/**/*.d.ts"
  ],
  "awesomeTypescriptLoaderOptions": {
    "silent": true,
    "useBabel": true,
    "useCache": true,
    "babelOptions": {
      "babelrc": false,
      "presets": [
        ["env", {
          "targets": {
            "browsers": ["last 2 versions", "ie 11"]
          },
          "modules": false,
          "useBuiltIns": true
        }],
        "react"
      ],
      "plugins": [
        "react-hot-loader/babel"
      ]
    }
  }
}
